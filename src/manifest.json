{
  "manifest_version": 3,
  "name": "contentSafetyFilter",
  "version": "1.0",
  "description": "Protects users from inappropriate content using AI analysis",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}