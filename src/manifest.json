{
  "manifest_version": 3,
  "name": "AI Content Safety Filter",
  "version": "1.0",
  "description": "Uses Claude AI to check webpage content for age-appropriate material",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "notifications"  
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "assets/icon48.png"
  }
}
